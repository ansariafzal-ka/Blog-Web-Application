<%- include("_nav") %>
<section class="w-full px-10 py-3 mt-4">
  <h1 class="text-xl font-medium">Edit Article</h1>
  <form
    class="w-[90%] flex flex-col gap-y-6 mt-5"
    action="/api/v1/blog/edit/<%= blog._id %>?_method=PUT"
    method="POST"
  >
    <div class="flex flex-col gap-y-3">
      <label class="text-xl font-medium" for="newTitle">New Title</label>
      <input
        required
        class="px-4 py-2 border rounded outline-none"
        type="text"
        name="newTitle"
        id="newTitle"
        value="<%= blog.title %>"
      />
    </div>
    <div class="flex flex-col gap-y-3">
      <label class="text-xl font-medium" for="newSubTitle">New Sub Title</label>
      <input
        required
        class="px-4 py-2 border rounded outline-none"
        type="text"
        name="newSubTitle"
        id="newSubTitle"
        value="<%= blog.subTitle %>"
      />
    </div>
    <div class="flex flex-col gap-y-3">
      <label class="text-xl font-medium" for="newMarkdown">New Markdown</label>
      <textarea
        required
        class="px-4 py-2 border rounded outline-none"
        type="text"
        name="newMarkdown"
        id="newMarkdown"
      >
<%= blog.markdown %></textarea
      >
    </div>
    <button
      type="submit"
      class="w-[100px] px-4 py-2 border border-gray-300 rounded"
    >
      edit
    </button>
  </form>
</section>
