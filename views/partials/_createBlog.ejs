<%- include("_nav") %>
<section class="w-full px-10 py-3 mt-4">
  <h1 class="text-xl font-medium">New Article</h1>
  <form
    class="w-[90%] flex flex-col gap-y-6 mt-5"
    action="/api/v1/blog/create"
    method="POST"
  >
    <div class="flex flex-col gap-y-3">
      <label class="text-xl font-medium" for="title">Title</label>
      <input
        required
        class="px-4 py-2 border rounded outline-none"
        type="text"
        name="title"
        id="title"
      />
    </div>
    <div class="flex flex-col gap-y-3">
      <label class="text-xl font-medium" for="subTitle">Sub Title</label>
      <input
        required
        class="px-4 py-2 border rounded outline-none"
        type="text"
        name="subTitle"
        id="subTitle"
      />
    </div>
    <div class="flex flex-col gap-y-3">
      <label class="text-xl font-medium" for="markdown">Markdown</label>
      <textarea
        required
        class="px-4 py-2 border rounded outline-none"
        type="text"
        name="markdown"
        id="markdown"
      ></textarea>
    </div>
    <button
      type="submit"
      class="w-[100px] px-4 py-2 border border-gray-300 rounded"
    >
      create
    </button>
  </form>
</section>
