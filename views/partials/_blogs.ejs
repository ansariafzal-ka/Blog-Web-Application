<section class="w-full px-10 py-4 grid grid-cols-4 gap-5">
  <% blogs.forEach((blog) => { %>
  <div class="flex flex-col gap-y-2 p-3 border border-gray-300 rounded shadow">
    <h1 class="text-xl font-medium"><%= blog.title %></h1>
    <p class="text-gray-600">
      <%= new Date(blog.createdAt).toLocaleDateString() %>
    </p>
    <p><%= blog.subTitle %></p>
    <div class="flex flex-row justify-start items-center gap-3">
      <a
        href="/api/v1/blog/id=/<%= blog.id %>"
        class="px-4 py-2 border border-gray-300 rounded"
      >
        Read more
      </a>
      <a
        href="/api/v1/blog/edit-article/<%=  blog._id %>"
        class="px-4 py-2 border border-gray-300 rounded"
        >Edit</a
      >
      <form
        action="/api/v1/blog/delete/<%= blog._id %>?_method=DELETE"
        method="post"
      >
        <button type="submit" class="px-4 py-2 border border-gray-300 rounded">
          Delete
        </button>
      </form>
    </div>
  </div>
  <% }) %>
</section>
